<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd
        ">

	<!-- 提供方应用信息，用于计算依赖关系 -->
	<dubbo:application name="dubbo-provider" id="dubbo-provider" />
		
	<!-- 使用multicast广播注册中心暴露服务地址 -->
	<dubbo:registry address="${zk.address.list}" protocol="zookeeper" id="dubbo" />
		
	<!-- expose this service through dubbo protocol, through port 20880 -->
	<dubbo:protocol name="dubbo" port="${zk.port}" threadpool="fixed" threads="1024" />
		
	<dubbo:service interface="com.cloudyoung.xxx.api.DubboApi"
				   ref="dubboApi" 
				   registry="dubbo" 
				   timeout="2000"
				   loadbalance="roundrobin" />
				   
		
	<!-- implementation -->
	<bean id="dubboApi" class="com.cloudyoung.xxx.api.impl.DubboApiImpl" />

</beans>